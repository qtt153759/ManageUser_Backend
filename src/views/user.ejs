<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>User</title>
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
            rel="stylesheet"
        />
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    </head>
    <body>
        <div class="container">
            <div class="row">
                <div class="user-infor-container">
                    <form method="POST" action="/users/create-user">
                        <div class="pt-3">
                            <h3>Create a new user:</h3>
                        </div>
                        <div class="pb-3 col-6">
                            <label class="form-label" for="email"
                                >Email address</label
                            >
                            <!-- với viewengine backend dùng thuộc tính name cho input -->
                            <input
                                class="form-control"
                                id="email"
                                type="email"
                                name="email"
                                aria-describedby="emailHelp"
                                required
                            />
                        </div>
                        <div class="col-6"></div>
                        <div class="pb-3 col-6">
                            <label class="form-label" for="password"
                                >Password</label
                            >
                            <input
                                class="form-control"
                                id="password"
                                name="password"
                                type="password"
                                required
                            />
                        </div>
                        <div class="pb-3 col-6"></div>
                        <div class="pb-3 col-6">
                            <label class="form-label" for="username"
                                >Username</label
                            >
                            <input
                                class="form-control"
                                id="exampleInputPassword1"
                                name="username"
                                type="password"
                                required
                            />
                        </div>
                        <div class="col-12">
                            <!-- dùng col-12 bọc ngoài để tránh trường hợp button bị ảnh hưởng bởi class row css -->
                            <button type="submit" class="btn btn-primary">
                                Submit
                            </button>
                        </div>
                    </form>
                </div>
                <div class="table-user mt-3">
                    <h3>Table user:</h3>
                    <table class="table table-hover table-bordered">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Email</th>
                                <th scope="col">Username</th>
                                <th scope="col">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% userList.forEach(function(item,index) { %>
                            <tr>
                                <th scope="row"><%= item.id %></th>
                                <td><%= item.email %></td>
                                <td><%= item.username %></td>
                                <td>
                                    <button class="btn btn-warning">
                                        Edit
                                    </button>
                                    <form
                                        style="display: inline"
                                        action="/delete-user/<%= item.id %>"
                                        method="POST"
                                    >
                                        <button
                                            class="btn btn-danger"
                                            type="submit"
                                        >
                                            Delete
                                        </button>
                                    </form>
                                </td>
                            </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </body>
</html>
